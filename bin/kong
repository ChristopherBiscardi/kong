#!/usr/bin/env lua

local help_message = [[

Usage: kong <command>

where <command> is one of:
  start, stop, version

kong --help            print this message
kong <command> --help  print the help message of a command

kong@0.0.1-beta]]

local cmd = arg[1]

if not cmd or cmd == "-h" or cmd == "--help" then
  print(help_message)
  os.exit(0)
end

require("kong.cmd."..cmd)
